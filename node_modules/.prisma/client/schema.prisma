// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SuperAdmin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Clinic {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  password   String
  address    String
  type       String
  owner String 
  phone String 
  expired_at DateTime? @db.Timestamptz()

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Clinic")
}

model Doctor {
  id        Int @id @default(autoincrement())
  clinic_id Int

  name       String
  email      String @unique
  password   String
  price      Int? @default(0)
  specialist String? @default("umum")
  is_active Boolean @default(false)

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Doctor")
}

model Pharmacy {
  id        Int    @id @default(autoincrement())
  clinic_id Int
  name      String
  email     String @unique
  password  String

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Pharmacy")
}

model Receptionist {
  id        Int @id @default(autoincrement())
  clinic_id Int

  name     String
  email    String @unique
  password String

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Receptionist")
}

model Cashier {
  id        Int @id @default(autoincrement())
  clinic_id Int

  name     String
  email    String @unique
  password String

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Cashier")
}

model Patient {
  id Int @id @default(autoincrement())

  nik String @default("")
  name    String
  phone String @unique
  birth_date DateTime @db.Timestamptz()
  gender  String
  address String

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Patient")
}

model Master_Service {
  id        Int @id @default(autoincrement())
  clinic_id Int

  name  String
  type  String
  price Int

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Master_Service")
}

model Service {
  id                 Int @id @default(autoincrement())
  master_service_id  Int
  medical_history_id Int

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Service")
}

model Medical_History {
  id Int @id @default(autoincrement())

  clinic_id  Int
  patient_id Int?
  doctor_id  Int?

  receptionist_id Int?
  cashier_id      Int?

  pharmacy_id Int?

  note           String?
  medicine       String?
  status         String
  payment_status Boolean @default(false)

  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("Medical_History")
}
